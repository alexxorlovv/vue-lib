ListElement(:class="[isFirstChild ? 'menu__list-first-child' : '']")
  .menu__arrow: ArrowElement(v-if="!isFirst", width="10", :theme="theme", :placement="placement")
  .menu__child-title(v-if="!isFirst && !isOpen") {{text}}
  MenuItemComponent(v-for="(element, index) in elements",
                    :key="index",
                    @closeChildrenEvent="closeChildrenHandler",
                    :isCloseChildrenProp="isCloseChildren",
                    @diactiveMenuEvent="diactiveMenuHandler",
                    :isDiactiveMenu="isDiactiveMenu",
                    @activeMenuEvent="activeMenuHandler",
                    :isHover="isHover",
                    :theme="theme",
                    :element="element",
                    :isFirst="isFirst",
                    :isClose="isClose",
                    :isOpen="isOpen",
                    :placement="placement",
                    :text="element.text")
